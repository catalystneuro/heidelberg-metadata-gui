{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "input.schema.json",
  "title": "Source data and conversion options",
  "description": "Schema for the source data and conversion options",
  "version": "0.1.0",
  "type": "object",
  "additionalProperties": false,
  "properties": {

    "source_data": {
      "title": "Source Files",
      "type": "object",
      "required": [
        "path_ecephys_raw"
      ],
      "properties": {
        "path_ecephys_raw": {
          "type": "string",
          "format": "file",
          "description": "path to raw ecephys data file"
        }
      }
    },

    "conversion_options": {
      "title": "Conversion Options",
      "type": "object",
      "required": [
        "ecephys_raw"
      ],
      "properties": {
        "ecephys_raw": {
          "type": "boolean",
          "default": true,
          "description": "convert ecephys processed data to nwb"
        }
      }
    }
  }
}
