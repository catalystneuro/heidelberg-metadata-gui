{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "source.schema.json",
  "title": "Source data",
  "description": "Schema for the source data",
  "version": "0.1.0",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "path_ophys_raw"
  ],
  "properties": {
    "path_ophys_raw": {
      "type": "string",
      "format": "file",
      "description": "path to raw ophys data file"
    },
    "path_ophys_processed": {
      "type": "string",
      "format": "file",
      "description": "path to processed ophys data file"
    }
  }
}
